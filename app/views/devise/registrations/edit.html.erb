<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md ml-6">
        <h2 class="mt-6 text-justify text-2xl font-bold leading-9 tracking-tight text-gray-900">Edit <%=
                resource_name.to_s.humanize %>
        </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,
        class: "mt-0 md:mt-5 sm:mx-auto sm:w-full sm:max-w-[480px]" }) do |f| %>
        <div class="bg-white px-6 py-12 md:border sm:rounded-lg sm:px-12">
            <%= render "devise/shared/error_messages" , resource: resource %>

                <div class="space-y-6">
                    <div class="field">
                        <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,
                                class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                , required: true %>
                    </div>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                        </div>
                        <% end %>

                            <div class="field">
                                <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
                                    <i>(leave blank if you don't want to change it)</i><br />
                                    <%= f.password_field :password, autocomplete: "new-password" ,
                                        class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                        %>
                                        <% if @minimum_password_length %>
                                            <br />
                                            <em class="text-sm">
                                                <%= @minimum_password_length %> characters minimum
                                            </em>
                                            <% end %>
                            </div>

                            <div class="field">
                                <%= f.label :password_confirmation,
                                    class: "block text-sm font-medium leading-6 text-gray-900" %><br />
                                    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,
                                        class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                        %>
                            </div>

                            <div class="field">
                                <%= f.label :current_password,
                                    class: "block text-sm font-medium leading-6 text-gray-900" %> <i>(we need your
                                        current password to confirm your changes)</i><br />
                                    <%= f.password_field :current_password, autocomplete: "current-password" ,
                                        class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                        %>
                            </div>

                            <div class="actions">
                                <%= f.submit "Update" ,
                                    class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                                    %>
                            </div>
                </div>

                <div class="mt-3">Unhappy? <%= button_to "Cancel my account" , registration_path(resource_name), data: {
                        confirm: "Are you sure?" , turbo_confirm: "Are you sure?" }, method: :delete,
                        class: "text-red-600 font-semibold hover:text-indigo-500" %>
                </div>

                <%= link_to "Back" , :back, class: "mt-3 text-indigo-600 font-semibold hover:text-indigo-500" %>

        </div>

        <!-- <h3 class="mt-6 text-justify text-xl font-semibold leading-6 text-gray-900">Cancel my account</h3> -->

        <!-- <div class="mt-3">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-indigo-600 font-semibold hover:text-indigo-500" %></div>
    
      <%= link_to "Back", :back, class: "mt-3 text-indigo-600 font-semibold hover:text-indigo-500" %> -->

        <% end %>


</div>